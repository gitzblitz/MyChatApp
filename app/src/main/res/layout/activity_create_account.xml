<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.gitzblitz.mychatapp.activities.CreateAccountActivity">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/cv"
        android:background="@color/colorAccent"
        android:layout_centerInParent="true"
        app:cardCornerRadius="13dp"
        android:elevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorAccent">

            <ImageView
                android:layout_width="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/chat_icon"
                android:layout_height="80dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:text="@string/create_account"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="50dp"
                android:paddingEnd="30dp">

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/accountDisplayName"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Display Name"
                    android:paddingBottom="10dp"
                    android:textColor="#f0f7f4"
                    android:textSize="14sp"
                    android:textCursorDrawable="@drawable/bg_input_cursor_2"
                    android:background="@drawable/selector_bg_edit_2"

                    />

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/accountDisplayEmail"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Enter Email"
                    android:paddingBottom="10dp"
                    android:textColor="#f0f7f4"
                    android:textSize="14sp"
                    android:textCursorDrawable="@drawable/bg_input_cursor_2"
                    android:background="@drawable/selector_bg_edit_2"

                    />
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/accountDisplayPassword"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="@string/enter_password"
                    android:paddingBottom="10dp"
                    android:textColor="#f0f7f4"
                    android:textSize="14sp"
                    android:textCursorDrawable="@drawable/bg_input_cursor_2"
                    android:background="@drawable/selector_bg_edit_2"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center">
                    
                    <Button
                        android:id="@+id/accountCreateActBtn"
                        android:stateListAnimator="@drawable/state_list_animator_z"
                        android:background="@drawable/bt_shape"
                        android:text="@string/create_account"
                        android:layout_marginStart="20dp"
                        android:textColor="#D3d3d3"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
